---
const { poster, episode, title } = Astro.props
---

<section class="rounded-lg overflow-hidden relative">
    <img class="transition w-64" src={poster} />

    <footer class="absolute bottom-0 w-full bg-gradient-to-t from-slate-800 to-transparent">
        <div class="ml-3 mb-3 mr-3">
            <strong
                class="bg-orange-500 font-bold text-sm rounded-2xl px-[14px] py-[3px]"
                >Episode {episode}</strong
            >
            <p class="font-bold text-xl truncate w-56">{title}</p>
        </div>
    </footer>
</section>

<style>
    img {
        box-shadow: inset 0 0 10px #f8a100;
    }
    section:hover img {
        opacity: 0.67;
        transform: scale(1.2);
    }
</style>
