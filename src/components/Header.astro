---
import UserIcon from '../icons/UserIcon.astro'
---

<header
    class="text-white flex flex-row bg-gray-800 h-28 items-center justify-between p-5 pl-28 pr-28"
>
    <img src="https://www3.animeflv.net/assets/animeflv/img/logo.png?v=2.3" />

    <section
        class="flex flex-row gap-5 items-center font-bold text-2xl text-gray-400"
    >
        <a class="transition hover:text-gray-300 cursor-pointer">INICIO</a>
        <a class="transition hover:text-gray-300 cursor-pointer"
            >DIRECTORIO ANIME</a
        >

        <input
            type="text"
            class="h-10 w-64 px-6 py-7 rounded-3xl font-medium bg-gray-900 outline-none"
            placeholder="Buscar..."
        />

        <button class="bg-gray-900 px-6 py-3 rounded-xl"> LOGIN</button>
    </section>
</header>
